{
   "name": "Block Sites",
   "version": "1.0.0",
   "manifest_version": 3,
   "description": "Bloquea sitios web",
   "author": "Luis",
   "content_scripts": [
      {
         "matches": [
            "*://*/*"
         ],
         "js": [
            "background.js"
         ]
      }
   ],
   "action": {
      "default_popup": "index.html",
      "default_title": "Block Sites",
      "default_icon": "icon.png"
   },
   "icons": {
      "16": "icon.png"
   },
   "permissions": [
      "tabs",
      "activeTab",
      "storage"
   ],
   "host_permissions": [
      "http://*.youtube.com/"
   ],
   "web_accessible_resources": [
      {
         "resources": [
            "urls.json",
            "password.json"
         ],
         "matches": [
            "<all_urls>"
         ]
      }
   ]
}